<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Active Jobs</title>
</head>
<body>
  <h1>Active Job Listings</h1>
  <table border="1">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Requirements</th>
        <th>Deadline</th>
        <th>Apply</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.description %></td>
          <td><%= job.requirements %></td>
          <td><%= job.deadline %></td>
          <td><a href="/jobs/<%= job.job_id %>/apply">Apply</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
