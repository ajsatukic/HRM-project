<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Job Listings</title>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Job Listings</h1>

    <!-- Create New Job Button -->
    <div class="mb-3 text-end">
      <a href="/jobs/create" class="btn btn-success">Create New Job</a>
    </div>

    <!-- Filter Form -->
    <form action="/jobs/filter" method="GET" class="mb-4 d-flex justify-content-between align-items-center">
      <div class="input-group w-50">
        <label class="input-group-text" for="status">Filter by Status:</label>
        <select id="status" name="status" class="form-select">
          <option value="active">Active</option>
          <option value="expired">Expired</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <!-- Job Table -->
    <table class="table table-hover table-striped">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Requirements</th>
          <th>Deadline</th>
          <th>Created By</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (jobs.length > 0) { %>
          <% jobs.forEach(job => { %>
            <tr>
              <td><a href="/jobs/<%= job.job_id %>" class="text-decoration-none"><%= job.title %></a></td>
              <td><%= job.description %></td>
              <td><%= job.requirements %></td>
              <td><%= job.deadline %></td>
              <td><%= job.created_by %></td>
              <td>
                <span class="badge <%= job.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                  <%= job.status %>
                </span>
              </td>
              <td>
                <a href="/jobs/<%= job.job_id %>/apply" class="btn btn-info btn-sm">Apply</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center">No jobs found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
