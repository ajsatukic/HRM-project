<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Rankings</title>
  <link href="/stylesheets/style.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    tbody tr {
      color: #2a1a29; /* Tekst unutar tabele */
      background-color: #ffffff; /* Pozadina reda */
    }

    tbody tr:hover {
      background-color: #f3f0f5; /* Hover efekat */
    }

    tbody td, thead th {
      padding: 10px;
      text-align: center;
      border: 1px solid #ddd; /* Obrub */
    }

    .table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .table th {
      background-color: #4c275f; /* Pozadina zaglavlja */
      color: #ffffff; /* Boja teksta u zaglavlju */
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1><i class="fas fa-trophy icon"></i> Job Rankings</h1>
      <a href="/admin-dashboard" class="btn">Back to Dashboard</a>
    </div>
    <div class="card">
      <div class="card-header">
        <i class="fas fa-list-alt"></i> Rankings Overview
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Rank</th>
              <th>Name</th>
              <th>Email</th>
              <th>Skills</th>
              <th>Experience</th>
              <th>Education</th>
              <th>Score</th>
            </tr>
          </thead>
          <tbody>
            <% if (rankings.length > 0) { %>
              <% rankings.forEach((rank, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= rank.first_name %> <%= rank.last_name %></td>
                  <td><%= rank.email %></td>
                  <td><%= rank.skills %></td>
                  <td><%= rank.experience %></td>
                  <td><%= rank.education %></td>
                  <td><%= rank.rating %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center">No candidates ranked for this job.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
