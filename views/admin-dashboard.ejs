<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/admin.css">
</head>
<body>
  <% if (typeof success !== 'undefined') { %>
    <div class="alert alert-success text-center">
      <%= success %>
    </div>
  <% } %>
  
  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger text-center">
      <%= error %>
    </div>
  <% } %>
  

  <div class="container mt-5">
    <h1 class="text-center">Admin Dashboard</h1>
    <p class="text-muted text-center">Manage job postings and applications efficiently.</p>

    <!-- Section for Job Postings -->
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        Job Postings
        <a href="/jobs/create" class="btn btn-light btn-sm float-end">Create New Job</a>
      </div>
      <div class="card-body">
        
        <!-- Active Jobs Table -->
        <div class="mb-4">
          <label for="jobStatusFilter" class="form-label">Filter by Status:</label>
          <select id="jobStatusFilter" class="form-select">
            <option value="active">Active</option>
            <option value="expired">Expired</option>
          </select>
        </div>
        
              
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Status</th>
              <th>Actions</th>
              <th>Applications</th>
            </tr>
          </thead>
          <tbody>
            <% if (jobs && jobs.length > 0) { %>
              <% jobs.forEach(job => { %>
                <tr>
                  <td><%= job.title %></td>
                  <td><%= job.status %></td>
                  <td>
                    <a href="/jobs/<%= job.job_id %>" class="btn btn-info btn-sm">Details</a>
                    <button class="btn btn-danger btn-sm delete-job-btn" data-id="<%= job.job_id %>">Delete</button>
                  </td>
                  <td>
                    <a href="/jobs/<%= job.job_id %>/applications" class="btn btn-primary btn-sm">View Applications</a>
                  </td>
                  <td>
                    <a href="/jobs/<%= job.job_id %>/rankings" class="btn btn-primary btn-sm">View Rankings</a>
                  </td>                                   
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="3" class="text-center text-muted">No jobs found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>


    <!-- Section for Candidates -->
    <div class="card mb-4">
      <div class="card-header bg-success text-white">
        Candidates
      </div>
      <div class="card-body">
        <h5>Applications Overview</h5>
        <p>Total Applications: <%= stats.applications %></p>
        <a href="/jobs" class="btn btn-primary">View Applications</a>
      </div>
    </div>

    <!-- Section for Communication -->
    <div class="card">
      <div class="card-header bg-warning text-dark">
        Communication with Candidates
      </div>
      <div class="card-body">
        <h5>Manage Candidate Status</h5>
        <a href="/jobs/applications" class="btn btn-secondary">Manage Applications</a>
        <a href="/calendar" class="btn btn-secondary">Interview Calendar</a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>


<script>
  document.getElementById('jobStatusFilter').addEventListener('change', async (e) => {
    const status = e.target.value;

    try {
      const response = await fetch(`/jobs/filter?status=${status}`);
      const result = await response.json();

      if (result.success) {
        const jobsTableBody = document.querySelector('table tbody');
        jobsTableBody.innerHTML = ''; // Očisti trenutne rezultate

        result.jobs.forEach(job => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${job.title}</td>
            <td>${job.status}</td>
            <td>
              <a href="/jobs/${job.job_id}" class="btn btn-info btn-sm">Details</a>
              <button class="btn btn-danger btn-sm delete-job-btn" data-id="${job.job_id}">Delete</button>
            </td>
          `;
          jobsTableBody.appendChild(row);
        });

        // Ponovo dodaj funkcionalnost za brisanje
        addDeleteListeners();
      } else {
        alert(result.message);
      }
    } catch (err) {
      console.error('Error filtering jobs:', err);
      alert('An error occurred while filtering jobs.');
    }
  });

  // Ponovno povezivanje funkcije za brisanje
function addDeleteListeners() {
  document.querySelectorAll('.delete-job-btn').forEach(button => {
    button.addEventListener('click', async (e) => {
      const jobId = button.getAttribute('data-id');
      const confirmed = confirm('Are you sure you want to delete this job?');

      if (!confirmed) return;

      try {
        const response = await fetch(`/jobs/${jobId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          },
        });

        const result = await response.json();

        if (result.success) {
          alert(result.message);
          button.closest('tr').remove();
        } else {
          alert(`Error: ${result.message}`);
        }
      } catch (err) {
        console.error('Error deleting job:', err);
        alert('An error occurred while deleting the job.');
      }
    });
  });
}

// Odmah pozovi funkciju za povezivanje na početku
addDeleteListeners();

</script>


</html>
