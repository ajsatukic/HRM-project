<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/admin.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Admin Dashboard</h1>
    <p class="text-muted text-center">Manage job postings and applications efficiently.</p>

    <!-- Sekcija za konkurs -->
    <div class="card mb-4">
        <div class="mb-3">
            <form action="/jobs/search" method="GET" class="d-flex">
              <input 
                type="text" 
                name="query" 
                class="form-control me-2" 
                placeholder="Search by title or description" 
                required>
              <button type="submit" class="btn btn-primary">Search</button>
            </form>
          </div>
          <a href="/jobs/archived" class="btn btn-secondary">View Archived Jobs</a>

        <div class="card-header bg-primary text-white">
          Job Postings
          <a href="/jobs/create" class="btn btn-light btn-sm float-end">Create New Job</a>
        </div>
        <div class="card-body">
          <h5>Active Jobs</h5>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% jobs.forEach(job => { %>
                <tr>
                  <td><%= job.title %></td>
                  <td><%= job.status %></td>
                  <td>
                    <a href="/jobs/<%= job.job_id %>" class="btn btn-info btn-sm">Details</a>
                    <form action="/jobs/<%= job.job_id %>?_method=DELETE" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      

    <!-- Sekcija za pregled kandidata -->
    <div class="card mb-4">
      <div class="card-header bg-success text-white">
        Candidates
      </div>
      <div class="card-body">
        <h5>Applications Overview</h5>
        <p>Total Applications: <%= stats.applications %></p>
        <a href="/jobs" class="btn btn-primary">View Applications</a>
      </div>
    </div>

    <!-- Sekcija za komunikaciju -->
    <div class="card">
      <div class="card-header bg-warning text-dark">
        Communication with Candidates
      </div>
      <div class="card-body">
        <h5>Manage Candidate Status</h5>
        <a href="/jobs/applications" class="btn btn-secondary">Manage Applications</a>
        <a href="/calendar" class="btn btn-secondary">Interview Calendar</a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
