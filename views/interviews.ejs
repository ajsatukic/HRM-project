<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Interview Calendar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.7/main.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Interview Calendar</h1>
    <div id="calendar"></div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.7/main.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.7/main.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/timegrid@6.1.7/main.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/interaction@6.1.7/main.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const calendarEl = document.getElementById('calendar');

      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        editable: true,
        selectable: true,
        events: '/interviews', // Dohvaća termine s servera
        dateClick: function (info) {
          const date = info.dateStr;
          const location = prompt('Enter location:');
          const notes = prompt('Enter notes:');
          
          if (location && notes) {
            fetch('/interviews', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                scheduled_at: date,
                location: location,
                notes: notes,
              }),
            })
              .then(response => response.json())
              .then(result => {
                if (result.success) {
                  calendar.refetchEvents(); // Osvježava kalendar
                  alert('Interview scheduled successfully!');
                } else {
                  alert('Error scheduling interview: ' + result.message);
                }
              });
          }
        },
      });

      calendar.render();
    });
  </script>
</body>
</html>
