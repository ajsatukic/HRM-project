<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notifications</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/notifications.css">
</head>
<body>
    <div class="container">
        <h1>Notifications</h1>
      
        <div class="card">
          <div class="card-header">Your Notifications</div>
          <div class="card-body">
            <% if (notifications.length > 0) { %>
              <ul class="list-group">
                <% notifications.forEach(notification => { %>
                  <li class="list-group-item">
                    <div class="notification-header">
                      <strong><%= notification.message %></strong>
                      <span class="notification-date">
                        <%= notification.formatted_date || 'N/A' %>
                      </span>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p>No notifications available.</p>
            <% } %>
            <a href="/admin-dashboard" class="btn btn-primary mt-4 w-100">Back to Dashboard</a>
          </div>
        </div>
      </div>
      

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
